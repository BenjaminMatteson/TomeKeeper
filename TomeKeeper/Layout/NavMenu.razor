@inject TomeKeeper.Services.DragDropService DragDropService;
@inject TomeKeeper.Services.SavedSpellsService SavedSpellsService;
@using TomeKeeper.ViewModels;
@using TomeKeeper.Services;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Tome Keeper</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Tome of All Spells
            </NavLink>
        </div>
        <div class="nav-item px-3" 
             @ondragenter="HandleDragEnter"
             @ondragleave="HandleDragLeave"
             @ondrop="HandleDrop"
             @ondragover:preventDefault="true"
             @ondragover="HandleDragOver">
            <NavLink class="nav-link" href="mytome">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> My Spellbook
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void HandleDragOver(DragEventArgs e)
    {
    }

    private void HandleDrop(DragEventArgs e)
    {
        if(DragDropService.Payload != null)
        {
            Console.WriteLine($"Dropped payload: {DragDropService.Payload}");
            SavedSpellsService.AddSpell((string)DragDropService.Payload);
        }
    }

    private void HandleDragEnter(DragEventArgs e)
    {
    }

    private void HandleDragLeave(DragEventArgs e)
    {
    }
}
